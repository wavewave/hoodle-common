                   base == 4.*, 
                   bytestring >= 0.9, 
                   mtl > 2, 
                   monad-loops >= 0.3,
                   filepath, 
                   directory, 
                   uuid  
  if os(minw32) 
    Build-Depends: 
  else 
    Build-Depends:   unix 
  

  Exposed-Modules: 
                   Hoodle.Util.Process


